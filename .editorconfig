root = true

[*]
end_of_line = LF
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = off
spaces_around_operators = true

# [*.{js, ts, css, scss}]
# spaces_around_brackets=outside


[*.{ts, js, py}]
trim_trailing_whitespace = true
max_line_length = 120

[*.min.*]
trim_trailing_whitespace = false
